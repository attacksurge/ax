  provisioner "file" {
    source      = "./configs"
    destination = "/tmp/configs"
  }

  provisioner "ansible" {
    playbook_file = "${var.AXIOM_ROOT}/images/ansible/playbooks/barebones.yml"
  
    ansible_env_vars = [
      "ANSIBLE_CONFIG=${var.AXIOM_ROOT}/images/ansible/ansible.cfg"
    ]
  }

  provisioner "shell" {
    inline = [
      "echo  | base64 -d"
    ]
  }

}
